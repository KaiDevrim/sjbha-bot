{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["@app/*"],
      "@services/*": ["@services/*"],
      "@plugins/*": ["@plugins/*"]
    }
  },
  "include": [
    "@app/**/*",
    "@plugins/**/*",
    "@services/**/*", "frontend"
  ],
  "exclude": [
    "**/*.tsx",
    "**/*.test.ts"
  ]
}