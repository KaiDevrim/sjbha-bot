{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["./app/*"],
      "@shared/*": ["./shared/*"],
      "@plugins/*": ["./plugins/*"],
      "@packages/*": ["./packages/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  // "include": [
  //   "src/**/*"
  // ],
  "exclude": [
    "**/*.tsx",
    "**/*.test.ts"
  ]
}